#include<bits/stdc++.h>
using namespace std;
int main()
{int t;
cin>>t;
while(t--){int n,k;
cin>>n>>k;
int a[n];
for(int i=0;i<n;i=i+1)cin>>a[i];
int ans;
int count=0;
if(k<n){
    for(int i=1;i<=n-k+1;i=i+1){if(a[i]!=1){ans=1;break;}else ans=2;}
    }
else {
    for(int i=1;i<n;i=i+2){count=count+1;if(a[i]!=count){ans=count;break;}else ans =count+1;}
    }
cout<<ans<<endl;}}
