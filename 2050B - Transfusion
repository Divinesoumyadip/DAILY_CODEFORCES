#include <bits/stdc++.h>
#define fi first
#define se second
using namespace std;
using i64  = long long;
using f64  = long double;
using ui64 = unsigned long long;
using pII  = pair<int,int>;
using pLL  = pair<i64,i64>;
mt19937 rng32(time(0));
mt19937_64 rng64(chrono::steady_clock::now().time_since_epoch().count());
i64 T,n,a[200009];
void AzarathMetrionZinthos()
{
    cin>>n;
    i64 sumodd=0,sumeven=0;
    vector<i64> odd,even;
    for(int i=1;i<=n;++i)
    {
        cin>>a[i];
        if(i%2) sumodd+=a[i];
        else sumeven+=a[i];
    }
    if((sumodd+sumeven)%n) cout<<"NO\n";
    else
    {
        i64 tbc=(sumodd+sumeven)/n;
        for(int i=3;i<=n;++i)
        {
            if(a[i-2]<tbc)
            {
                a[i]-=tbc-a[i-2];
                a[i-2]=tbc;
            }
            else
            {
                a[i]+=a[i-2]-tbc;
                a[i-2]=tbc;
            }
        }
        for(int i=1;i<=n;++i)
        {
            if(a[i]!=tbc)
            {
                cout<<"NO\n";
                return;
            }
        }
        cout<<"YES\n";
    }
}
signed main()
{
    ios_base::sync_with_stdio(0);
    cin.tie(0);cout.tie(0);
    cin>>T;
    while(T--) AzarathMetrionZinthos();
}
